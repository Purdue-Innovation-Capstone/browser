{
  "manifest_version": 3,
  "name": "VeriFact",
  "description": "Detects sites that are known to spread misinformation",
  "author": "Misinformation Lab",
  "version": "1.0",
  "icons": {
    "16": "res/icons/extension_icon_16.png",
    "32": "res/icons/extension_icon_32.png",
    "48": "res/icons/extension_icon_48.png",
    "128": "res/icons/extension_icon_128.png"
  },
  "action": {
    "default_icon": {
      "16": "res/icons/extension_icon_16.png",
      "32": "res/icons/extension_icon_32.png"
    },
    "default_popup": "pub/index.html"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}