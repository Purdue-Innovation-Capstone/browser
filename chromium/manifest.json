{
  "manifest_version": 3,
  "name": "VeriFact",
  "description": "Detects sites that are known to spread misinformation",
  "author": "Misinformation Lab",
  "version": "1.0",
  "icons": {
    "128": "icons/grey_circle_128x128.png"
  },
  "action": {
    "default_icon": {
      "128": "icons/grey_circle_128x128.png"
    },
    "default_popup": "pub/index.html"
  },
  "permissions": [
    "tabs",
    "alarms",
    "storage"
  ],
  "host_permissions": [
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  }
}